.container {
  padding: 40rpx;
}
.container .title {
  color: #333333;
  font-size: 36rpx;
  margin-bottom: 30rpx;
  font-weight: bold;
}
.container .textarea-box {
  position: relative;
}
.container .textarea-box textarea {
  height: 280rpx !important;
  box-sizing: border-box;
  font-size: 24rpx;
  padding: 20rpx !important;
}
.container .textarea-box .tip {
  font-size: 24rpx;
  color: #999;
  position: absolute;
  bottom: 15rpx;
  right: 20rpx;
}
.container .upload-box .imgs {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.container .upload-box .img-item {
  width: 163rpx;
  height: 163rpx;
  border-radius: 8rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.container .upload-box .img-box {
  position: relative;
  margin-right: 15rpx;
}
.container .upload-box .img-box:last-of-type {
  margin-right: 0;
}
.container .upload-box .img-box .delet-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 50%;
  margin-top: -30rpx;
  left: 50%;
  margin-left: -30rpx;
  font-size: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.container .upload-box .img-box image {
  width: 100%;
  height: 100%;
}
.container .upload-box .upload-btn {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-flow: column;
          flex-flow: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  box-sizing: border-box;
  padding: 20rpx 0;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  border: 2rpx dashed #d1d1d1;
}
.container .upload-box .upload-btn image {
  width: 42rpx;
  height: 38rpx;
}
.container .upload-box .upload-btn text {
  color: #999;
}
.container .upload-box .upload-btn .text-big {
  font-size: 24rpx;
}
.container .upload-box .upload-btn .text-small {
  font-size: 20rpx;
}
.container .info-form {
  margin-bottom: 40rpx;
}
.container .info-form .item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 20rpx 0;
  position: relative;
}
.container .info-form .item .name {
  font-size: 28rpx;
  width: 150rpx;
  height: 88rpx;
  line-height: 88rpx;
}
.container .info-form .item .icon {
  width: 22rpx;
  height: 14rpx;
  position: absolute;
  top: 54rpx;
  right: 20rpx;
}
.container .info-form .item .picker-box .uni-input {
  width: 520rpx;
  font-size: 28rpx;
  background-color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid #cdcdcd;
  border-radius: 12rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.container .info-form .item input, .container .info-form .item textarea {
  width: 520rpx;
  font-size: 28rpx;
  background-color: #fff;
  height: 80rpx;
  border: 1rpx solid #cdcdcd;
  border-radius: 12rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.container .info-form .tip {
  color: #999999;
  font-size: 20rpx;
  margin-top: 15rpx;
}
.container .confirm-btn {
  width: 100%;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  background: #297CFE;
  color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}

