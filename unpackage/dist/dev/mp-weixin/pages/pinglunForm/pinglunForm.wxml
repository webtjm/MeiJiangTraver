<view class="container"><view class="status-box"><text class="title">评分</text><block wx:for="{{status}}" wx:for-item="item" wx:for-index="i" wx:key="i"><view data-event-opts="{{[['tap',[['statusSelectTap',[i]]]]]}}" class="{{['item',statusidx==i?'active':'']}}" bindtap="__e"><image src="{{statusidx==i?item.act:item.no}}"></image><text class="text">{{item.name}}</text></view></block></view><view class="textarea-box"><textarea placeholder-style="color:#999" placeholder="请填写您的评价…" data-event-opts="{{[['input',[['__set_model',['','content','$event',[]]]]]]}}" value="{{content}}" bindinput="__e"></textarea><view class="tip">{{inputnum+"/"+textnum}}</view></view><view class="upload-box"><block wx:for="{{imgList}}" wx:for-item="item" wx:for-index="i" wx:key="i"><view class="item img-box"><image src="{{item}}" mode="aspectFill"></image><view data-event-opts="{{[['tap',[['DelImg',['$event']]]]]}}" class="cuIcon cuIcon-delete delet-btn" bindtap="__e"></view></view></block><block wx:if="{{showupload}}"><view data-event-opts="{{[['tap',[['ChooseImage',['$event']]]]]}}" class="item upload-btn" bindtap="__e"><image src="{{$root.m0+'img_icon.png'}}" mode></image><text class="text-bid">上传照片</text><text class="text-small">0/3</text></view></block></view><view data-event-opts="{{[['tap',[['commentPub',['$event']]]]]}}" class="confirm-btn" bindtap="__e">提交</view></view>