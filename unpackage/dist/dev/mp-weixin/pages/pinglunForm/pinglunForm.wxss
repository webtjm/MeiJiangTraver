.container {
  padding: 31rpx 31rpx 50rpx 31rpx;
}
.status-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-bottom: 30rpx;
}
.status-box .title {
  font-size: 30rpx;
  margin-right: 20rpx;
}
.status-box .item {
  padding: 0rpx 30rpx;
  height: 64rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border: 2rpx solid #999;
  color: #999;
  border-radius: 32rpx;
  margin-right: 20rpx;
}
.status-box .item:last-of-type {
  margin-right: 0;
}
.status-box .item.active {
  color: #297CFE;
  border: 2rpx solid #297CFE;
}
.status-box .item .text {
  font-size: 30rpx;
}
.status-box .item image {
  width: 38rpx;
  height: 38rpx;
  margin-right: 15rpx;
}
.textarea-box {
  width: 100%;
  height: 278rpx;
  position: relative;
  margin-bottom: 30rpx;
}
.textarea-box textarea {
  width: 100%;
  height: 100%;
  background-color: #F3F4F6;
  border-radius: 8rpx;
  padding: 15rpx 20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #333333;
}
.textarea-box .tip {
  font-size: 24rpx;
  color: #999;
  position: absolute;
  bottom: 15rpx;
  right: 20rpx;
}
.upload-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-bottom: 30rpx;
}
.upload-box .item {
  width: 218rpx;
  height: 164rpx;
  border-radius: 8rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.upload-box .img-box {
  position: relative;
  margin-right: 17rpx;
}
.upload-box .img-box:last-of-type {
  margin-right: 0;
}
.upload-box .img-box .delet-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 50%;
  margin-top: -30rpx;
  left: 50%;
  margin-left: -30rpx;
  font-size: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.upload-box .img-box image {
  width: 100%;
  height: 100%;
}
.upload-box .upload-btn {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-flow: column;
          flex-flow: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  box-sizing: border-box;
  padding: 20rpx 0;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  border: 2rpx dashed #d1d1d1;
  background: #f3f4f6;
}
.upload-box .upload-btn image {
  width: 42rpx;
  height: 38rpx;
}
.upload-box .upload-btn text {
  color: #999;
}
.upload-box .upload-btn .text-big {
  font-size: 24rpx;
}
.upload-box .upload-btn .text-small {
  font-size: 20rpx;
}
.confirm-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 96rpx;
  font-size: 32rpx;
  background: #297CFE;
  color: #fff;
  text-align: center;
  line-height: 96rpx;
  letter-spacing: 15rpx;
}

